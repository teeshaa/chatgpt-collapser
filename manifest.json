{
  "manifest_version": 3,
  "name": "ChatGPT Answer Collapser Enhanced",
  "version": "2.0",
  "description": "Enhanced ChatGPT conversation manager with favorites, search, pagination, and multi-browser support.",
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

