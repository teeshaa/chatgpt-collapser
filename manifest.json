{
  "manifest_version": 3,
  "name": "ChatGPT Answer Collapser",
  "version": "1.0",
  "description": "Collapse and index ChatGPT answers for easier navigation.",
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }  
}

